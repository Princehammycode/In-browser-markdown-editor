{
  "compilerOptions": {
    "target": "es2016",
    "allowJs": true,                               
    "jsx": "preserve",
    "resolveJsonModule": true,                                
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": false,                                      
    "skipLibCheck": true                             
  },
  "include": ["src", "assets.d.ts", "**/*.ts", "**/*.tsx", "src/index.tsx"],
  "exclude": ["node_modules"]
}
